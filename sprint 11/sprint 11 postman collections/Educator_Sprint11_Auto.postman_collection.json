{
  "info": {
    "name": "Educator Sprint 11 Full Regression",
    "_postman_id": "sprint11-full-regression",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [

    {
      "name": "0 - Register Student (Dynamic)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/api/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student_{{$timestamp}}@educate.com\",\n  \"password\": \"Test@123\"\n}"
        }
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test('Register Success', function () {",
            "    pm.response.to.have.status(200);",
            "});",
            "var body = JSON.parse(pm.request.body.raw);",
            "pm.environment.set('student_email', body.email);",
            "pm.environment.set('student_password', body.password);"
          ]
        }
      }]
    },

    {
      "name": "1 - Login Student",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/api/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{student_email}}\",\n  \"password\": \"{{student_password}}\"\n}"
        }
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test('Login Success', function () {",
            "    pm.response.to.have.status(200);",
            "});",
            "var json = pm.response.json();",
            "pm.environment.set('student_token', json.token);"
          ]
        }
      }]
    },

    {
      "name": "2 - Buy Subscription",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{student_token}}" }
        ],
        "url": "{{base_url}}/api/learner/subscriptions/{{bundle_plan_id}}/buy"
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test('Purchase Initiated', function () {",
            "    pm.response.to.have.status(200);",
            "});",
            "var json = pm.response.json();",
            "pm.environment.set('providerPaymentId', json.providerPaymentId);"
          ]
        }
      }]
    },

    {
      "name": "3 - Confirm Payment Webhook",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/payment/webhook?providerPaymentId={{providerPaymentId}}"
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test('Webhook Success', function () {",
            "    pm.response.to.have.status(200);",
            "});"
          ]
        }
      }]
    },

    {
      "name": "4 - Validate Active Subscription",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{student_token}}" }
        ],
        "url": "{{base_url}}/api/learner/subscriptions/my"
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test('Subscription Retrieved', function () {",
            "    pm.response.to.have.status(200);",
            "});",
            "var json = pm.response.json();",
            "pm.test('Subscription Exists', function () {",
            "    pm.expect(json.length).to.be.greaterThan(0);",
            "});",
            "pm.test('Subscription ACTIVE', function () {",
            "    pm.expect(json[0].status).to.eql('ACTIVE');",
            "});"
          ]
        }
      }]
    },

    {
      "name": "5 - Validate Payment History",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{student_token}}" }
        ],
        "url": "{{base_url}}/api/learner/subscriptions/payments/history"
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test('Payment History Retrieved', function () {",
            "    pm.response.to.have.status(200);",
            "});",
            "var json = pm.response.json();",
            "pm.test('At Least One Payment Exists', function () {",
            "    pm.expect(json.length).to.be.greaterThan(0);",
            "});",
            "pm.test('Latest Payment SUCCESS', function () {",
            "    pm.expect(json[0].status).to.eql('SUCCESS');",
            "});"
          ]
        }
      }]
    },

    {
      "name": "6 - Negative Test: Buy Without JWT",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/learner/subscriptions/{{bundle_plan_id}}/buy"
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test('Unauthorized Without JWT', function () {",
            "    pm.expect(pm.response.code).to.be.oneOf([401, 403]);",
            "});"
          ]
        }
      }]
    },

    {
      "name": "7 - Negative Test: Invalid Plan",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{student_token}}" }
        ],
        "url": "{{base_url}}/api/learner/subscriptions/00000000-0000-0000-0000-000000000000/buy"
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test('Invalid Plan Rejected', function () {",
            "    pm.expect(pm.response.code).to.be.oneOf([400,404]);",
            "});"
          ]
        }
      }]
    }

  ]
}
